<h1>Instruments</h1>
<% @models.each do |model|  %>
  <p>Name:<%= model.name  %>     <%= link_to "Delete #{model.name}", "/models/#{model.id}", method: :delete %></p>

  <p>Year: <%= model.year %></p>
  <p>Is it vintage?:<%= model.vintage %></p>
  <p>What is it worth?:<%= model.value %></p>
<% end %>

<%= form_tag("/instrument_builders/#{@instrument_builder.id}/models", method: :get) do %>
  <%= label_tag("value") %>
  <%= text_field_tag(:value, params[:value]) %>
  <%= submit_tag("Only return records worth more than this") %>
<% end %>



